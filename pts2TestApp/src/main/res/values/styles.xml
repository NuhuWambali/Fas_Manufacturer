<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BluePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/selector_button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ButtonGrey" parent="Button">
        <item name="android:background">@drawable/selector_button_grey</item>
    </style>

    <style name="ButtonGreen" parent="Button">
        <item name="android:background">@drawable/selector_button_green</item>
    </style>

    <style name="ButtonRed" parent="Button">
        <item name="android:background">@drawable/selector_button_red</item>
    </style>

    <style name="ButtonBlue" parent="Button">
        <item name="android:background">@drawable/selector_button_blue</item>
    </style>

    <style name="ButtonYellow" parent="Button">
        <item name="android:background">@drawable/selector_button_yellow</item>
    </style>
</resources>